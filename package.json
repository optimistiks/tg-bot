{
  "name": "tg-bot",
  "version": "0.0.1",
  "main": "output/index.js",
  "license": "MIT",
  "dependencies": {
    "bunyan": "^1.8.12",
    "dotenv": "^8.2.0",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.1.1",
    "@types/bunyan": "^1.8.6",
    "@types/node": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "prettier": "2.0.5",
    "rollup": "^2.10.4",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslib": "^2.0.0",
    "typescript": "^3.9.2"
  },
  "scripts": {
    "dev": "ts-node-dev -r dotenv/config --transpile-only src/index.ts | bunyan",
    "lint": "eslint src && tsc --noEmit",
    "build": "rollup -c",
    "start": "node -r dotenv/config output/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
